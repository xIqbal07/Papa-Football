<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/matches_card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/matches_card_border"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_past_chip"
            style="@style/AlexandriaBold.10sp.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/match_chip_past_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="@string/matches_tab_past"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_past_date"
            style="@style/AlexandriaRegular.10sp.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/matches_secondary_text"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_past_chip"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="01.08.2025" />

        <TextView
            android:id="@+id/tv_past_home"
            style="@style/AlexandriaBold.14sp.white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@id/tv_past_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_past_chip"
            tools:text="Royal Vallecano" />

        <TextView
            android:id="@+id/tv_past_away"
            style="@style/AlexandriaRegular.12sp.white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toStartOf="@id/tv_past_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_past_home"
            tools:text="Real Betis" />

        <TextView
            android:id="@+id/tv_past_score"
            style="@style/AlexandriaBold.18sp.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/matches_score_text"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_past_home"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2-3" />

        <TextView
            android:id="@+id/tv_past_result"
            style="@style/AlexandriaRegular.12sp.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/matches_secondary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_past_score"
            tools:text="FT" />

        <TextView
            android:id="@+id/tv_past_status"
            style="@style/AlexandriaBold.12sp.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/matches_secondary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_past_score"
            tools:text="01.08.2025" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

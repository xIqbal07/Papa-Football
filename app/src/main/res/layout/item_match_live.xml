<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/matches_card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/matches_card_border"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_live_chip"
            style="@style/AlexandriaBold.10sp.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/match_chip_live_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="@string/matches_tab_live"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_live_minute"
            style="@style/AlexandriaRegular.10sp.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/matches_secondary_text"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_live_chip"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Today 20:00" />

        <TextView
            android:id="@+id/tv_live_home"
            style="@style/AlexandriaBold.14sp.white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@id/tv_live_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_live_chip"
            tools:text="Royal Vallecano" />

        <TextView
            android:id="@+id/tv_live_away"
            style="@style/AlexandriaRegular.12sp.white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toStartOf="@id/tv_live_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_live_home"
            tools:text="Real Betis" />

        <TextView
            android:id="@+id/tv_live_score"
            style="@style/AlexandriaBold.18sp.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/matches_score_text"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_live_home"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="0-1" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/matches_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_live_score" />

        <TextView
            android:id="@+id/tv_live_time"
            style="@style/AlexandriaRegular.12sp.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/matches_secondary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_live_score"
            tools:text="55'" />

        <TextView
            android:id="@+id/tv_live_status"
            style="@style/AlexandriaBold.12sp.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Live"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_live_score" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

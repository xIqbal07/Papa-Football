<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlexandriaRegular" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alexandria_regular</item>
    </style>

    <style name="AlexandriaBold" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alexandria_bold</item>
    </style>

    <style name="AlexandriaRegular.white" parent="AlexandriaRegular">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlexandriaBold.white" parent="AlexandriaBold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlexandriaRegular.12sp.white" parent="AlexandriaRegular.white">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AlexandriaBold.12sp.white" parent="AlexandriaBold.white">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AlexandriaBold.14sp.white" parent="AlexandriaBold.white">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlexandriaBold.12sp.matchesTab" parent="AlexandriaBold">
        <item name="android:textColor">@color/matches_tab_unselected_text</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>